<h1>マイページ</h1>

<h2>プロフィール</h2>
<table class="table">
    <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
    </tr>
</table>
<%= link_to "編集", edit_user_path, class: "btn btn-primary"%>

<h2>投稿した記事</h2>
<table class="table">
    <tr>
        <th>タイトル</th>
        <th>投稿日時</th>
        <th></th>
        
    </tr>
    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.created_at %></td>
        <td><%= link_to "詳細", article_path(article.id) %></td>
    </tr>
    <% end %>
</table>


