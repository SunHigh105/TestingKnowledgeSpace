<div class="card mb-4">
    <div class="card-header text-muted">
        <ul>
            <li><h2><%= @article.title %></h2></li>
            <li>
                <p>
                <% @article.categories.each do |category| %>
                    <span class="badge badge-info"><%= category.name %></span>
                <% end %>
                </p>
            </li>
            <li>
            by <%= User.find(@article.user_id).name %> 
            投稿日：<%= @article.created_at.to_s(:datetime_jp) %>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <p class="card-text"><%= simple_format(@article.content) %></p>
    </div>
</div>

<div class="btns">
    <% if logged_in? && @article.user_id ==  current_user.id %>
        <%= link_to '編集', edit_article_path(@article.id), class: 'btn btn-primary' %>
        <%= link_to '削除', @article, class: 'btn btn-primary', method: :delete, data: { confirm: '削除しますか？' } %>
    <% end %>
    <%= link_to '一覧へ', articles_path, class: 'btn btn-primary' %>
</div>
