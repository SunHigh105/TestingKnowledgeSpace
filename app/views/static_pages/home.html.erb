<div class="row">
    <div class="col-md-8">
        <h2>新着記事</h2>
        <% (0..2).each do |n| %>
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title"><%= @latest_articles[n].title %></h2>
                    <p>
                    <% @latest_articles[n].categories.each do |category| %>
                        <span class="badge badge-primary"><%= category.name %></span>
                    <% end %>
                    </p>
                    <p class="card-text"><%= @latest_articles[n].content.truncate(50)%></p>
                    <%= link_to "もっと見る", article_path(@latest_articles[n].id), class: 'btn btn-primary' %>
                </div>
                 <div class="card-footer text-muted">
                    <%= @latest_articles[n].created_at.to_s(:datetime_jp) %>
                </div>
            </div>
        <% end %>
        <%= link_to '記事一覧へ' , articles_path%>
    </div>

    <div class="col-md-4">
        <h2>カテゴリ</h2>
        <div class="card my-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                        <% @categories.each do |category| %>
                            <li><%= link_to "#{category.name}(#{category.articles.size})", articles_path(category_id: category.id), method: :get %></li>
                        <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>